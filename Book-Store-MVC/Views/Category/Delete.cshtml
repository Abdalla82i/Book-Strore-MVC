
@{
    ViewData["Title"] = "Delete";
}

<section class="bg-light rounded-3 m-5">

    <form class="p-4" method="post" action="/Category/Delete/@Model.Id"  enctype="multipart/form-data">

        <h4 class="p-2"> <i class="fa-solid fa-book"></i>  Edit Category</h4>

        <partial name="PartialView/EditDeletePartialView" />

        <div class="form-group p-1">
            <button type="submit" onclick="return confirm('Are you sure you want to delete this Category?');" class="btn  m-1"> <i class="fa-solid text-danger  fa-trash"></i>  Delete </button>
            <a asp-action="Index" asp-controller="Category" class="btn  ">Back to list</a>

        </div>
    </form>
</section>


