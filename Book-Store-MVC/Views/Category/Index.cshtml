
@model List<Category>

@{
    ViewData["Title"] = "Index";
}



<section class="m-5 rounded-3 bg-light  ">
    <div class="container">
     

        @if (!User.IsInRole("Admin"))
        {
            @if (Model.Count() > 0)
            {

                <a asp-action="Create" class=" btn  mb-4"> <i class="fa-solid fa-plus"></i>  Create New Category </a>



                <table class="table  mt-3">

                    <thead>
                        <tr>

                            <td> Categories</td>

                            <td>Edit</td>
                            <td>Delete</td>



                        </tr>
                    </thead>

                    <tbody>

                        @{
                            foreach (var category in Model)
                            {
                                <tr>
                                    <td><i class="fa-solid fa-wand-magic-sparkles"></i>  @category.Name</td>

                                    <td>
                                        <a class="btn  m-1" href="/Category/Edit?id=@category.Id"> <i class="fa-solid fa-pen"></i>  Edit </a>
                                    </td>
                                    <td>
                                        <a class="btn  m-1" href="/Category/Delete?id=@category.Id"> <i class="fa-solid text-danger  fa-trash"></i>  Delete </a>
                                    </td>





                                </tr>
                            }

                        }


                    </tbody>
                </table>
            }

        }
        else
        {
            <div class="d-flex justify-content-between">
                <div>
                  
                    @foreach (var cat in Model)
                    {
                        <a  class="btn button"> @cat.Name</a>

                    }
                </div>

                <div class="w-50">
                    <img src="~/imges/6920933.jpg" class="img-fluid " alt="Alternate Text" />
                </div>

               </div>
        }

     
     
    </div>
     
      

</section>
