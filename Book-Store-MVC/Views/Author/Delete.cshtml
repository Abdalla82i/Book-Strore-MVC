@model Author

@{
    ViewData["Title"] = "Delete";
}

<section class="bg-light rounded-3 m-5">
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <h4 class="p-2">
            <i class="fa-solid text-danger fa-trash"></i> Delete
        </h4>

        <div class="d-flex align-items-center justify-content-lg-around">
            <div class="card-body position-relative text-black">
                <h4 class="card-title">@Model.Name</h4>
                <p class="card-text text-info">Author</p>

                <button type="submit" onclick="return confirm('Are you sure you want to delete this author?');" class="btn m-1">
                    <i class="fa-solid text-danger fa-trash"></i> Delete
                </button>
                <a asp-action="Index" asp-controller="Author" class="btn">Back to list</a>
            </div>
        </div>
    </form>
</section>
