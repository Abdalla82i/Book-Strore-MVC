@model Book_Store_MVC.ViewModels.OrderSummaryViewModel

@{
    ViewBag.Title = "Order Summary";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Order Summary</h2>

    <div class="card">
        <div class="card-header">
            Order Details
        </div>
        <div class="card-body">
            <p><strong>Order Date:</strong> @Model.OrderDate.ToString("MM/dd/yyyy")</p>

            @if (Model.BookOrders.Any())
            {
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Book Title</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var bookOrder in Model.BookOrders)
                        {
                            <tr>
                                <td>@bookOrder.Book.Title</td>
                                <td>@bookOrder.Book.Price</td>
                                <td>@bookOrder.Quantity</td>
                                <td>@(bookOrder.Book.Price * bookOrder.Quantity)</td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="text-right">
                    <h4>Total Price: @Model.TotalPrice.ToString("C")</h4>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center" role="alert">
                    This order is empty.
                </div>
            }

            <p>
                @Html.ActionLink("Back to Orders", "Index", "Order", null, new { @class = "btn btn-sm btn-secondary" })
            </p>
        </div>
    </div>
</div>