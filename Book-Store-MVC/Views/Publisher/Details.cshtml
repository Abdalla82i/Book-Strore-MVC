@model Book_Store_MVC.Models.Publisher

@{
    ViewData["Title"] = "Publisher Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0">Publisher Details</h3>
                </div>
                <div class="card-body">
                    <h4 class="card-title">@Model.Name</h4>
                    <p class="card-text">This is the information for the selected publisher.</p>

                    <div class="d-flex justify-content-between align-items-center mt-4">

                        @if (User.IsInRole("admin") || User.IsInRole("publisher"))
                        {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Edit</a>
                        }
                        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
