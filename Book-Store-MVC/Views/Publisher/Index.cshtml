
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
		<a class="btn" asp-action="Create" asp-controller="Publisher">
		<i class="fa-solid fa-plus">Create New Publisher</i>
        </a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-body"> 
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">Publisher</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>