@{
    ViewData["Title"] = "Index";
}

    @if (!User.IsInRole("admin") || User.IsInRole("publisher"))
    {
        <a class="btn m-3" asp-action="Create" asp-controller="Publisher">
            <i class="fa-solid fa-plus "></i> Create New Publisher
        </a>
    }
<div class="row g-3 m-2">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card mb-4 shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">Publisher</p>

                    <div class="mt-auto">
                        <div class="d-flex flex-wrap gap-2 justify-content-between">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">
                                <i class="fa-solid fa-eye"></i> Details
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">
                                <i class="fa-solid fa-pen-to-square"></i> Edit
                            </a>
                            @if (User.IsInRole("admin") || User.IsInRole("publisher"))
                            {
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-secondary text-danger">
                                    <i class="fa-solid fa-trash"></i> Delete
                                </a>
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
</div>